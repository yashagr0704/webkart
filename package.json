{
  "name": "webkart",
  "version": "1.0.0",
  "description": "This is a MERN Stack Ecommerce Project",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "postinstall": "cd frontend && npm install",
    "start": "node backend/server",
    "build": "cd frontend && npm run build",
    "server": "nodemon backend/server",
    "client": "npm start --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "data:i": "node backend/seeder",
    "data:d": "node backend/seeder -d"
  },
  "author": "Yash agarwal",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "jsonwebtoken": "^9.0.1",
    "mongoose": "^7.4.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1"
  }
}
